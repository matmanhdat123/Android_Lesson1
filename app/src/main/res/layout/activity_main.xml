<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/background"
        android:layout_height="match_parent"
        tools:showIn="@layout/activity_main"
        tools:context=".MainActivity">


    <Button
            android:text="@string/login"
            android:textColor="@color/white"
            android:background="82567d"
            android:layout_width="284dp"
            android:layout_height="61dp" tools:layout_editor_absoluteY="464dp"
            android:id="@+id/button" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
    <EditText
            android:layout_width="231dp"
            android:text="@string/Email"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_height="47dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            tools:layout_editor_absoluteX="113dp" android:id="@+id/editText"
            app:layout_constraintBottom_toTopOf="@id/editText2"/>
    <EditText
            android:layout_width="231dp"
            android:text="@string/pass"
            android:textColor="@color/white"
            android:layout_height="45dp"
            android:textAlignment="center"
            android:inputType="numberPassword"
            android:ems="10"
            tools:layout_editor_absoluteY="407dp" tools:layout_editor_absoluteX="113dp" android:id="@+id/editText2"/>
    <TextView
            android:text="@string/Forgot"
            android:textColor="@color/purple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="537dp"
            tools:layout_editor_absoluteX="138dp" android:id="@+id/textView"/>
    <TextView
            android:text="@string/Donhaveaccount"
            android:textColor="@color/purple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="680dp"
            tools:layout_editor_absoluteX="105dp" android:id="@+id/textView2"/>
    <TextView
            android:text="@string/createone"
            android:textColor="@color/createone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="680dp"
            tools:layout_editor_absoluteX="251dp" android:id="@+id/textView3"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="45dp" app:srcCompat="@mipmap/ic_launcher_lock"
            tools:layout_editor_absoluteY="407dp" tools:layout_editor_absoluteX="64dp" android:id="@+id/imageView"/>
    <ImageView
            android:layout_width="49dp"
            android:layout_height="47dp" app:srcCompat="@mipmap/ic_launcher_letter"
            tools:layout_editor_absoluteY="360dp" tools:layout_editor_absoluteX="64dp" android:id="@+id/imageView2"/>
    <ImageView
            android:layout_width="417dp"
            android:layout_height="351dp" app:srcCompat="@mipmap/ic_launcher_komlini"
            android:id="@+id/imageView3" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/editText" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>